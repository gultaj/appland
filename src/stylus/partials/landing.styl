.landing
  background-color #98d361
  color #fff
  padding 70px 0
  text-align center
  &-title
    font-size 2rem
    font-weight 400
  &-desc
    font-size 1.1rem
    line-height 1.5
    padding 0 50px
    font-weight 100
  .list
    @extend $clearfix
    margin-top 20px
    .one-third
      float left
      width (100/3)%
      padding 50px 50px 0
      font-size 1.1rem
      font-weight 100
      line-height 1.5

      for $i in smart responsive clear
        &.{$i}::before
          @extend $icon, $icon-before
          width 90px
          height @width
          spriteP(lookup('$' + $i), @width)
    .list-title
      font-weight 400
      font-size 1.5rem
      margin-bottom 30px
      margin-top 40px
