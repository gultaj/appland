.testimonials
  text-align center
  margin 60px auto 100px
  &::before
    @extend $icon, $icon-before
    width 45px
    height @width
    spriteP($quotes, @width)
  .testimonial-list

    @extend $clearfix
    li
      float left
      width (100/3)%
      padding 0 50px
      text-align left
      img
        float left
        margin-right 20px
        padding 3px
        border-radius 50%
        border solid 1px #98d361
  .testimonial-title
    margin 0
    color #98d361
    font-weight 500
    padding-top 8px
  .testimonial-type
    margin 0
    color #8c9494
    font-size 1.1rem
  blockquote
    quotes "\201C""\201D""\2018""\2019"
    font-size 1.5rem
    color #8c9494
    font-style italic
    padding 0 150px
    line-height 1.5
    margin-bottom 120px
    &::before
      content open-quote
    &::after
      content close-quote