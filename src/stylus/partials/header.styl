.header
  padding-top 80px
  padding-bottom 40px
  .in
    @extend $clearfix
  .slider
    float left
    width 50%
    text-align center
  .about
    float right
    width 50%
    padding 135px 50px 0
    .logo
      display block
      font-size 4rem
      text-decoration none
      color $font-color
      font-weight 500
      &::before
        @extend $icon, $icon-before
        width 140px
        height @width
        spriteP($logo, @width)
        margin-right 20px
    .desc
      color $font-color
      font-size 2rem
      padding-top 60px
      padding-bottom 40px
      line-height 1.5
  .platforms
    padding-top 50px
    span
      @extend $icon
      display inline-block
      margin-right 40px
      for $i in 'ios' 'android' 'wphone'
        &.{$i}
          width 32px
          height @width
          spriteP(lookup('$'+$i), @width)
