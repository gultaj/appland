$radius = 35px

.notify
  background-color #f3f5f5
  color #8c9494
  text-align center
  padding 75px 0
  &::before
    @extend $icon, $icon-before
    width 60px
    height @width
    spriteP($email, @width)
  &-header
    font-weight 400
    font-size 1.8rem
    margin-bottom 10px
  &-desc
    font-size 1.3rem
    margin 0
  &-form
    margin-top 50px
    .input-group
      input
        padding 20px 40px
        border solid 1px rgba(140, 148, 148, 0.24)
        font-size 1.3rem
        &:focus
          outline none
      input[type='email']
        border-radius $radius 0 0 $radius
        width 60%
      input[type='submit']
        margin-left -4px
        border-radius 0 $radius $radius 0
        background-color #98d361
        color #fff
        text-transform uppercase
        border-left none
